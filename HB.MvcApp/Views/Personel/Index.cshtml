@{

    int sayı1 = 1;
    int sayı2 = 2;
}

@model List<Personel>



<div container="container">

    <h2 class="text-center">Personeller  @((float) (sayı1+sayı2)/2) </h2>

    <div class="row">


        <div class="col-md-10 mx-auto">


            <table class="table table-striped table-hover ">

                <thead>

                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                </thead>

                <tbody>


                

                    @{



                        foreach (var item in Model)
                        {
                            <tr>
                                
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            </tr>
                        }
                      
                    }






                </tbody>

            </table>

        </div>


    </div>
</div>


